<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25sp"
    android:scrollbarSize="25sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1,2,3"
            android:padding="3dp"
            >
            <TableRow
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="                          "
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="                      "
                    android:textSize="20dp"
                    android:gravity="center_horizontal"

                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/i"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:text="i"
                    android:textColor="#FAFBFB"
                    android:backgroundTint="#5E6767"
                    android:layout_span="3"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/currentdate"
            android:text="Current Date "
            android:textSize="15dp"
            android:textColor="#FAFBFB"
            android:backgroundTint="#012020"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/togregorian"
            android:text="TO Gregorian "
            android:textSize="15dp"
            android:textColor="#FAFBFB"
            android:backgroundTint="#012020"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toethiopia"
            android:text="TO Ethiopian "
            android:textSize="15dp"
            android:textColor="#FAFBFB"
            android:backgroundTint="#012020"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/dayname"
            android:text="Name Of day using Eth"
            android:textSize="15dp"
            android:textColor="#FAFBFB"
            android:backgroundTint="#012020"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/daynameg"
            android:text="Name Of day Using Gre"
            android:textSize="15dp"
            android:textColor="#FAFBFB"
            android:backgroundTint="#012020"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>